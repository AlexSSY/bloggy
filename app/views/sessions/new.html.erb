<div class="row">
  <div class="col-4"></div>
  <div class="col-4">
    <%= form_with model: @user, url: session_path, method: :post, class: "" do |form| %>

      <%# Email %>
      <div class="mb-3 row">
        <%= form.label :email, class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= form.email_field :email, class: "form-control" %>
        </div>
      </div>

      <%# Password %>
      <div class="mb-3 row">
        <%= form.label :password, class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= form.password_field :password, class: "form-control" %>
        </div>
      </div>

      <%# Submit %>
      <div class="">
        <%= form.submit "Log In", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>
  <div class="col-4"></div>
</div>