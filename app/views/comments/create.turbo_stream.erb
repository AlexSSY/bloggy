<%= turbo_stream.replace "comments_form" do %>
  <%= render 'comments/form', comment: @comment.errors.any? ? @comment : Comment.new, post: @post %>
<% end %>

<%= turbo_stream.prepend dom_id(@post, "comments_list") do %>
  <%= render partial: "comments/comment", locals: { comment: @comment } %>
<% end %>
