<%= form_with model: comment, url: post_comments_path(post), method: :post do |form| %>
  <%# Display object errors %>
  <% if form.object.errors.any? %>
    <div class="text-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <%# Display body text-area %>
  <% if form.object.errors.any? %>
    <%= form.text_area :body, class: "form-control mb-2 border border-danger", rows: 4 %>
  <% else %>
    <%= form.text_area :body, class: "form-control mb-2", rows: 4 %>
  <% end %>
  <%# Display submit button %>
  <%= form.submit "Send", class: "btn btn-outline-primary" %>
<% end %>