<div class="row">
  <div class="col-12">
    <%= render @post, verbose: true %>
    <%# Comments section %>
    <div class="mt-5 text-center fs-5">
      Comments:
    </div>
    <div class="mt-3">
      <%# Form for the new comment %>
      <%= render 'comments/form', comment: @comment || Comment.new, post: @post %>
      <%# Display comments list %>
      <div class="mt-4"></div>
      <%= turbo_frame_tag dom_id(@post, "comments_list") do %>
        <%= render @post.comments.limit(5) %>
      <% end %>
        <%= link_to "Load more", "#", id: "more", class: "d-block mx-auto btn btn-outline-primary" %>
    </div>
    <script>
      document.getElementById("more").onclick = function (event) { event.preventDefault(); alert("Trump"); }
    </script>
  </div>
</div>
