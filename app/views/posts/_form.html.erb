<%= form_with model: @post, url: @post.new_record? ? posts_path : post_path(@post), method: @post.new_record? ? :post : :patch do |form| %>
  <%# Display object errors %>
  <% if form.object.errors.any? %>
    <div class="text-danger">
      <% form.object.errors.full_messages.each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>
  <%# Title %>
  <div class="form-group mb-3">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  <%# body %>
  <div class="form-group mb-3">
    <%= form.label :body %>
    <%= form.rich_text_area :body %>
  </div>
  <%# Title %>
  <div class="form-group">
    <%= form.submit @post.new_record? ? "Create post" : "Update post", class: "btn btn-primary" %>
  </div>
<% end %>